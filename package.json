{
  "name": "talenet",
  "displayName": "TaleNet",
  "publisher": "talenet",
  "description": "웹 소설, 블로그 작성등 한글 작성을 위한 Visual Studio Code 확장 프로그램입니다.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "TaleNet Settings",
      "properties": {
        "talenet.quotes.doubleQuoteColor": {
          "type": "string",
          "default": "#FFCD00",
          "description": "쌍따옴표 글자 색상",
          "format": "color"
        },
        "talenet.quotes.singleQuoteColor": {
          "type": "string",
          "default": "#10FFFF",
          "description": "홑따옴표 글자 색상",
          "format": "color"
        },
        "talenet.includeSpaces": {
          "type": "boolean",
          "default": true,
          "description": "체크하면 공백을 포함한 글자수를 상태바에 표시합니다."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "extensionPack": [
    "ms-ceintl.vscode-language-pack-ko",
    "9beach.vscode-hanspell"
  ],
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
