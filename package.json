{
  "name": "talenet",
  "displayName": "TaleNet",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "TaleNet Settings",
      "properties": {
        "talenet.doubleQuoteColor": {
          "type": "string",
          "default": "rgba(255, 205, 0, 0.3)",
          "description": "Background color for double quotes."
        },
        "talenet.singleQuoteColor": {
          "type": "string",
          "default": "rgba(0, 255, 255, 0.3)",
          "description": "Background color for single quotes."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "extensionPack": [
    "ms-ceintl.vscode-language-pack-ko",
    "9beach.vscode-hanspell"
  ],
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
